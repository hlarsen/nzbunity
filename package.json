{
  "name": "nzbunity",
  "version": "2.0.0-alpha.0",
  "license": "MPL-2.0",
  "description": "Send and control NZB files directly with SABnzbd or NZBGet download clients.",
  "author": "clutterskull@gmail.com",
  "contributors": [
    "clutterskull@gmail.com"
  ],
  "keywords": [
    "NZB"
  ],
  "engines": {
    "node": ">15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clutterskull/nzbunity"
  },
  "homepage": "https://github.com/clutterskull/nzbunity",
  "bugs": {
    "url": "https://github.com/clutterskull/nzbunity/issues"
  },
  "scripts": {
    "clean": "rimraf build && rimraf dist && mkdir build && mkdir dist",
    "zip": "node -e \"const zip = require('cross-zip'); zip.zipSync('build', 'dist/nzbunity.zip');\"",
    "copy": "copyfiles --exclude src/**/*.ts src/** build",
    "typescript": "tsc",
    "sass": "sass --update --color src/content/css:build/content/css",
    "sass:watch": "yarn lint -- --watch",
    "lint": "esw --ext .js,.jsx,.ts,.tsx --color src",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "jest --color",
    "test:watch": "yarn test -- --verbose --watch",
    "watch": "concurrently -k -r -s first 'yarn test:watch' 'yarn lint:watch' 'yarn sass:watch'",
    "prebuild": "yarn lint && yarn test",
    "build": "yarn clean && yarn copy && yarn sass && yarn typescript",
    "postbuild": "echo 'Build successful!'",
    "dist": "yarn build && yarn zip"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "prettier/prettier": ["error", {
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "avoid"
      }]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "./src"
    ],
    "setupFiles": [
      "jest-webextension-mock",
      "jest-fetch-mock",
      "dotenv/config"
    ],
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "@types/chrome": "0.0.125",
    "@types/firefox-webext-browser": "^78.0.1",
    "@types/jest": "^26.0.15",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.3.0",
    "consola": "^2.15.0",
    "copyfiles": "^2.4.0",
    "cross-zip": "^3.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-webextension-mock": "^3.7.0",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "sass": "^1.27.0",
    "ts-jest": "^26.4.2",
    "typescript": "^4.0.3",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.8.0"
  },
  "packageManager": "yarn@3.1.1"
}
