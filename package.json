{
  "name": "nzbunity",
  "version": "2.0.0-alpha.0",
  "license": "MPL-2.0",
  "description": "Send and control NZB files directly with SABnzbd or NZBGet download clients.",
  "author": "clutterskull@gmail.com",
  "contributors": [
    "clutterskull@gmail.com"
  ],
  "keywords": [
    "NZB"
  ],
  "engines": {
    "node": ">15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clutterskull/nzbunity"
  },
  "homepage": "https://github.com/clutterskull/nzbunity",
  "bugs": {
    "url": "https://github.com/clutterskull/nzbunity/issues"
  },
  "scripts": {
    "clean": "rimraf build && rimraf dist && mkdir build && mkdir dist",
    "zip": "node -e \"const zip = require('cross-zip'); zip.zipSync('build', 'dist/nzbunity.zip');\"",
    "copy": "copyfiles --exclude src/**/*.ts src/** build",
    "typescript": "tsc",
    "sass": "sass --update --color src/content/css:build/content/css",
    "sass:watch": "npm run lint -- --watch",
    "lint": "esw --ext .js,.jsx,.ts,.tsx --color src",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "test": "jest --color",
    "test:watch": "npm run test -- --verbose --watch",
    "watch": "concurrently -k -r -s first 'npm run test:watch' 'npm run lint:watch' 'npm run sass:watch'",
    "prebuild": "npm run lint && npm run test",
    "build": "npm run clean && npm run copy && npm run sass && npm run typescript",
    "postbuild": "echo 'Build successful!'",
    "dist": "npm run build && npm run zip"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-inferrable-types": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "./src"
    ],
    "setupFiles": [
      "jest-webextension-mock",
      "jest-fetch-mock"
    ],
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "@types/chrome": "0.0.125",
    "@types/firefox-webext-browser": "^78.0.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.3.0",
    "consola": "^2.15.0",
    "copyfiles": "^2.4.0",
    "cross-zip": "^3.1.0",
    "eslint": "^7.12.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-webextension-mock": "^3.7.0",
    "rimraf": "^3.0.2",
    "sass": "^1.27.0",
    "ts-jest": "^26.4.2",
    "typescript": "^4.0.3",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill-ts": "^0.20.0"
  },
  "packageManager": "yarn@3.1.1"
}
